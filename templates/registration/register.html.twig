

{% block body %}
<style type="text/css">
html {
        overflow: hidden;
}
</style>
    <!doctype html>
<html lang="en">
  <head>
  	<title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="css/style.css">

	</head>
	<body class="img js-fullheight" style="background-image: url(images/library1.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Create an account</h3>
		      	{{ form_start(registrationForm) }}
		      		<div class="form-group">
		      		{{form_widget(registrationForm.fullname,{'attr':{'class':'form-control','placeholder': "Full name"}})}}
              </div>
              	<div class="form-group">
		      		{{form_widget(registrationForm.username,{'attr':{'class':'form-control','placeholder': "Username"}})}}
		      		</div>
              <div class="form-group">
		      		{{form_widget(registrationForm.mail_adress,{'attr':{'class':'form-control','placeholder': "E-mail adress"}})}}
            	</div>
	            <div class="form-group">
                {{form_widget(registrationForm.plainPassword,{'attr':{'class':'form-control','type':'password','placeholder': "Password"}})}}
	              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
	            </div>  
				Agree terms 
              {{ form_widget(registrationForm.agreeTerms) }}
			  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			  <a href="{{ path('app_login') }}" style="color: #fff">Have an account ?</a>
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary submit px-3">Sign up</button>
	            </div>
	            </div>
	          {{ form_end(registrationForm) }}
	          
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>

	</body>
</html>
{% endblock %}
